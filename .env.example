# AI Learning Assistant - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=development
LOG_LEVEL=debug

# ============================================================================
# API GATEWAY
# ============================================================================
API_GATEWAY_PORT=3000
CORS_ORIGIN=http://localhost:3000,http://localhost:3100

# ============================================================================
# SERVICE PORTS
# ============================================================================
LEARNING_SERVICE_PORT=3001
PRODUCTIVITY_SERVICE_PORT=3002
KNOWLEDGE_GRAPH_SERVICE_PORT=3003
CONTENT_SERVICE_PORT=3004
ANALYTICS_SERVICE_PORT=3005

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=ai_learning_assistant
DATABASE_URL=postgresql://postgres:your-secure-password@localhost:5432/ai_learning_assistant

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# ============================================================================
# CACHE AND MESSAGE QUEUE
# ============================================================================
REDIS_URL=redis://localhost:6379
RABBITMQ_URL=amqp://admin:password@localhost:5672

# ============================================================================
# SEARCH AND ANALYTICS
# ============================================================================
ELASTICSEARCH_URL=http://localhost:9200

# ============================================================================
# AUTHENTICATION
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
# AWS (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-learning-content

# OpenAI (for AI features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# ============================================================================
# MONITORING AND OBSERVABILITY
# ============================================================================
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3200
GRAFANA_ADMIN_PASSWORD=admin

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# Redis Commander
REDIS_COMMANDER_PORT=8081

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10MB
MAX_CODEBASE_SIZE=100MB

# Analysis Timeouts
ANALYSIS_TIMEOUT=30000  # 30 seconds

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
S3_BACKUP_BUCKET=ai-learning-backups
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# ============================================================================
# SSL/TLS (for production)
# ============================================================================
SSL_CERT_PATH=/etc/ssl/certs/ai-learning.crt
SSL_KEY_PATH=/etc/ssl/private/ai-learning.key

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME_FEATURES=true
ENABLE_ADVANCED_AI_FEATURES=true
ENABLE_MULTI_LANGUAGE_SUPPORT=false

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
# Database Connection Pools
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_MAX_MEMORY=256mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# Node.js Performance
UV_THREADPOOL_SIZE=4
NODE_OPTIONS=--max-old-space-size=2048